            <dd class="col-sm-4">
                @(item.ArrivalDate)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.DepartureDate)
            </dt>
            <dd class="col-sm-4">
                @(item.DepartureDate)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.Nights)
            </dt>
            <dd class="col-sm-4">
                @(item.Nights)
            </dd>
        }
