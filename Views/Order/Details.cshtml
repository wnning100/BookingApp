        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.PurchaseAmount)
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.CreditName)
        </dt>
        <dd class="col-sm-4">
