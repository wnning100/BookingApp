@model project.Models.UserLogin

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_user1.cshtml";
}

@section css{
    <link rel="stylesheet" href="~/css/userMain.css">
}
<h4>新增員工帳號</h4>


<div class="row">
    <div class="col-6 offset-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WID" class="control-label"></label>
                <input asp-for="WID" class="form-control" />
                <span asp-validation-for="WID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account" class="control-label"></label>
                <input asp-for="Account" class="form-control" />
                <span asp-validation-for="Account" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Authorize" class="control-label"></label>
                <input asp-for="Authorize" class="form-control" />
                <span asp-validation-for="Authorize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="新增" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Employee" asp-action="Index">返回</a>
</div>

